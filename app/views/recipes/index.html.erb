<div class="recipes-page">
  <div class="recipes-page-top">
    <h1>My Recipes</h1>
    <%= link_to "+ ADD RECIPE", new_recipe_path %>
  </div>
  <div class="recipes-list">
  <% if @recipes.empty? %>
    <h3>No recipes found</h3>
  <% else %>
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <div class="recipe-left">
          <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
          <% if can?(:destroy, recipe) %>
            <%= form_with(model: recipe, method: :delete, url: recipe_path(recipe)) do |form| %>
              <%= form.submit 'Delete this recipe', class: 'delete-recipe-btn' %>
            <% end %>
          <% end %>
        </div>
        <p><%= recipe.description %></p>
      </div>
    <% end %>
  <% end %>
</div>
</div>
